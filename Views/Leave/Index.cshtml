@model List<HRMS.Models.LEAVE>
@{
    ViewBag.Title = "Leave";
    ViewBag.Parent = "Configuration";
}

<div id="main-content">
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
                        <li class="breadcrumb-item">@ViewBag.Parent</li>
                        <li class="breadcrumb-item active">@ViewBag.Title</li>
                    </ol>
                </nav>
            </div>
        </div>
        <section class="section">
            <div class="card">
                <div class="card-header">
                    <a href="~/Leave/AddEditLeave?inLeaveCode=" data-bs-toggle="modal" data-bs-target="#leaveModalPopUp" class="btn btn-primary float-end">Add Leave</a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" id="datatable1">
                                <thead>
                                    <tr>
                                        <th style="width:10%">S. No.</th>
                                        <th style="width:20%">Leave Code</th>
                                        <th style="width:60%">Leave Name</th>
                                        <th style="width:10%">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int i = 0;}
                                    @foreach (var leave in Model)
                                    {
                                        <tr>
                                            <td style="width:10%">@(i = i + 1)</td>
                                            <td style="width:20%">@leave.LEV_CODE</td>
                                            <td style="width:60%">@leave.LEV_NAME</td>
                                            <td style="width:10%" class="text-center">
                                                <a href="~/Leave/AddEditLeave?inLeaveCode=@leave.LEV_CODE" data-bs-toggle="modal" data-bs-target="#leaveModalPopUp" class="edit"><i class="bi bi-pencil-square"></i></a>
                                                <a href="~/Leave/Delete?inLeaveCode=@leave.LEV_CODE" title="Delete" class="delete"><i class="bi bi-trash"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<div class="modal fade" id="leaveModalPopUp" tabindex="-1" aria-labelledby="leaveModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#loading").hide();
    });
</script>